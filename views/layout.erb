<!doctype html>
<html lang="en">
<head>
  <script type="text/javascript" src="/javascripts/jquery-3.4.1.min.js"></script>
  <script type="text/javascript" src="/javascripts/jquery.jcarousel.min.js"></script>
  <meta charset="UTF-8">
  <title>Business Networking</title>
  <link rel='stylesheet' href='/stylesheets/main.css'>
</head>
<body>

  <section class="container">
    <a href="/"><img src="/media/CIB-logo-230.png" alt="Carlton IN Business Logo"></a>
    <div class="sub-container">
      <nav class="nav-visible">  
        <div class="row-one">
          <a href="http://">Members</a>
          <a href="http://">Member Benefits</a>
          <a href="http://">Contact Us</a>
          <a href="http://">News</a>
          <a href="/login">Login</a>
          <% if logged_in? %>
            <form action="/session" method="post">
              <input type="hidden" name="_method" value="delete">
              <button>Log Out</button>
            </form>
          <% end %>
        </div>
      </nav>
      <% if logged_in? %>
      <nav class="nav-login">
        <div class="row-two">
          <a href="http://">Events</a>
          <a href="/profiles">Network</a>
          <a href="http://">Jobs</a>
          <a href="http://">Member Offers</a>
          <a href="http://">Tenders</a>
        </div>
      </nav>
      <% end %>
    </div>
  </section>

  <%= yield %>



<footer>
  <form action="">
    <input type="text" placeholder="First Name">
    <input type="text" placeholder="Surname">
    <input type="text" placeholder="Phone Number">
    <input type="text" placeholder="Email">
    <input type="text" placeholder="Enquiry">
    <button>Submit</button>
  </form>

  <p>&copy; Carlton IN Business</p> 
</footer>
</body>
</html>