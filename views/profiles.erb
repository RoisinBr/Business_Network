<h1 class=subpage-header>Network</h1>

<section class="all-profiles">
    <div class="profile-row">
        <% @profiles.each do |profile| %>
        <div class="profile">
            <a href="/profiles/<%=profile.id%>">
                <div class="profile-image">
                    <img class="profile-image" src="<%=profile.profile_picture%>" alt="Profile Picture">
                </div>
                <div class="profile-labels">
                    <h2><%= profile.first_name %> <%= profile.surname%> </h2>
                    <h1><%= profile.organisation%></h1>
                </div>
            </a>
        </div>
        <% end %>
    </div>
</section>


